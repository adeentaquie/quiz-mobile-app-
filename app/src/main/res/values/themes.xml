<resources>

    <!-- Default App Theme -->
    <style name="Theme.Quizmobileapp" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/circle_bg</item>
        <item name="colorBackground">@color/backgroundcolor</item>
        <item name="android:windowBackground">@color/backgroundcolor</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.SplashScreen" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/backgroundcolor</item>
    </style>
    <style name="MyTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:colorBackground">@color/my_background_color</item>
        <!-- Other style attributes -->
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorBackground">@color/my_app_background</item>
        <!-- Other theme attributes -->
    </style>
    <attr name="colorBackground" format="color" />



</resources>
